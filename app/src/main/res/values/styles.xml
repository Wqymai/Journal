<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Theme.MaterialDesign" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/toolbar_bg</item>
        <item name="colorPrimaryDark">@color/toolbar_bg</item>
        <item name="colorAccent">@color/toolbar_bg</item>
        <item name="android:textSize">16sp</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="ToolBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dip</item>
        <item name="android:minHeight">45dip</item>
        <item name="android:background">@color/toolbar_bg</item>
        <item name="android:theme">@style/PopuWindowStyle</item>
    </style>

    <style name="PopuWindowStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/gray</item>
    </style>




</resources>
